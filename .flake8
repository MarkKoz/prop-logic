[flake8]
docstring-convention = all
max-line-length = 100
ignore =
    E203, W503,
    # Missing Docstrings
    D100,D104,D105,D107,
    # Docstring Whitespace
    D203,D213,D214,D215,
    # Docstring Quotes
    D301,D302,
    # Docstring Content
    D401,D416,
    # Type Annotations
    ANN002,ANN003,ANN101,ANN102,ANN204,ANN206
per-file-ignores=**/__init__.py:F401,F403,F405,tests/*:D,ANN
exclude = __pycache__,__pypackages__,venv,.venv
